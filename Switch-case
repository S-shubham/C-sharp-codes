using System;

namespace hello_world
{    class Program
    {
        static void Main(string[] args)
        {
            // to read some input from the console
            Console.WriteLine("Enter your age: ");
            int age=Convert.ToInt32(Console.ReadLine());
            switch(age)
            {
                case 2: Console.WriteLine("your age is 2");
            break;
            case 21: Console.WriteLine("your age is 21 ");
            break;
            default: Console.WriteLine("you have not entered correct age ");
            break;
            
            }
            Console.ReadKey(); // To make the console wait for a key press otherwise it will close the terminal
        }
    }
}
